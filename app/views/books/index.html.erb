<h1>Books</h1>

<% if flash[:notice] %>
    <p><%= flash[:notice] %></p>
<% end %>

<% @books.each do |book| %>
    <P>title</P>
    <span><%= book.title %></span>

    <P>body</P>
    <span><%= book.body %></span>

    <%= link_to"show",book_path(book.id) %>
    <%= link_to"edit",edit_book_path(book.id) %>
    <%= link_to"destroy",book_path(book.id),method: :delete,"date-confirm" => "Are you sure ?" %>
<% end %>