<h3>Books</h3>

<% if flash[:notice] %>
    <p><%= flash[:notice] %></p>
<% end %>

<table>
<thead>
<tr>
    <ht>title</ht>
    <ht>body</ht>
    <ht></ht>
</tr>
</thead>

<tbody>
<% @books.each do |book| %>
    <tr>
    <td><%= book.title %></td>


    <td><%= book.body %></td>

    <td>
    <%= link_to"show",book_path(book.id) %>
    <%= link_to"edit",edit_book_path(book.id) %>
    <%= link_to"destroy",book_path(book.id),method: :delete,"date-confirm" => "Are you sure ?" %>
    </td>
    </tr>
<% end %>
</tbody>
</table>

